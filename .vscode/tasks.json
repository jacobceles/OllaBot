{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Run LLM Models",
        "type": "shell",
        "command": "ollama run qwen2.5-coder & ollama run llama3.2 & ollama pull nomic-embed-text",
        "problemMatcher": []
      },
      {
        "label": "Start FastAPI Server",
        "type": "shell",
        "command": "uvicorn main:app --reload",
        "problemMatcher": [],
        "isBackground": true,
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "dependsOn": [
          "Run LLM Models"
        ]
      },
      {
        "label": "Start Streamlit UI",
        "type": "shell",
        "command": "poetry run streamlit run app.py",
        "problemMatcher": [],
        "isBackground": true
      }
    ]
  }
  